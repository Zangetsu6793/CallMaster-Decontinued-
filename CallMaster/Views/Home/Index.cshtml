@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-3 fw-bold text-primary">📞 CallMaster</h1>
        <p class="lead text-secondary">Exclusive VoIP Call Management for Our Business.</p>

        <img src="https://source.unsplash.com/1200x400/?communication,tech" class="img-fluid rounded shadow-lg mt-4" alt="VoIP Communication">

        <div class="mt-4">
            <!-- This button will lead to the login page -->
            <a class="btn btn-lg btn-primary px-4" href="Users/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-telephone-outbound-fill text-primary" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Call Handling</h4>
            <p>Dial, receive, and manage calls directly from your browser.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-lock-fill text-danger" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Secure Access</h4>
            <p>Restricted to our business employees only.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-speedometer text-success" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Optimized UI</h4>
            <p>Fast and responsive design for seamless usage.</p>
        </div>
    </div>
</div>
