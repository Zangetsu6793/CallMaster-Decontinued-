    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Check if the URL contains the #agentManagement hash
            if (window.location.hash === '#agentManagement') {
                // Activate the Agent Management tab
                const agentTab = document.querySelector('a[href="#agentManagement"]');
                if (agentTab) {
                    new bootstrap.Tab(agentTab).show();
                }
            }
        });

             // Populate Edit Modal
        document.querySelectorAll('[data-bs-target="#editAgentModal"]').forEach(btn => {
            btn.addEventListener('click', function() {
                const agent = {
                    id: this.dataset.agentid,
                    fullName: this.dataset.fullname,
                    email: this.dataset.email,
                    voip: {
                        inbound: this.dataset.inboundnumber,
                        extension: this.dataset.extension,
                        username: this.dataset.username,
                        password: this.dataset.password,
                        principal: this.dataset.principal,
                        received: this.dataset.received
                    }
                };

                // Populate main form
                document.getElementById('editAgentId').value = agent.id;
                document.querySelector('#editAgentModal [name="fullName"]').value = agent.fullName;
