@model CallMaster.Models.ManagerDashboardModel

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<link href="~/css/ManagerDahsboard.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row flex-nowrap">
        <!-- Enhanced Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <button class="expand-btn" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="#campaigns" class="nav-link active" data-bs-toggle="tab">
                        <i class="fas fa-bullhorn"></i>
                        <span class="link-text">Campaigns</span>
                        <span class="badge bg-success ms-auto">3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#agentManagement" class="nav-link" data-bs-toggle="tab">
                        <i class="fas fa-users-cog"></i>
                        <span class="link-text">Agent Management</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- Main Content -->
        <div class="main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Welcome, <span class="text-primary">@Model.ManagerName</span></h2>
                <div class="system-status">
                    <span class="badge bg-success">
                        <i class="fas fa-signal"></i> Live Monitoring Active
                    </span>
                </div>
            </div>

            <div class="tab-content">
                <!-- Campaigns Tab -->
                <div class="tab-pane fade show active" id="campaigns">
                    <!-- Campaign Performance -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Campaign Performance</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <!-- Campaign performance table content -->
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Campaign Management Section -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Campaign Management</h5>
                            <div>
                                <div class="dropdown">
                                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-plus"></i> New Campaign
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#normalCampaignModal">Normal Campaign</a></li>
                                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#powerDialerModal">Power Dialer</a></li>
                                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#surveyModal">Survey/Feedback</a></li>
                                    </ul>
                                </div>
                                <button class="btn btn-light ms-2">
                                    <i class="fas fa-sync"></i> Refresh
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Campaign list table -->
                        </div>
                    </div>

                    <!-- Normal Campaign Modal -->
                    <div class="modal fade" id="normalCampaignModal">
                        <!-- Form fields for normal campaign -->
                    </div>

                    <!-- Power Dialer Modal -->
                    <div class="modal fade" id="powerDialerModal">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Create Power Dialer Campaign</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="powerDialerForm">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label>Campaign Name</label>
                                                    <input type="text" class="form-control" name="name" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label>Minimum Calls/Hour</label>
                                                    <input type="number" class="form-control" name="minCalls" min="10" max="100" value="30" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3 form-check">
                                                    <input type="checkbox" class="form-check-input" name="autoDial" checked>
                                                    <label class="form-check-label">Enable Auto-Dial</label>
                                                </div>
                                                <div class="mb-3">
                                                    <label>Max Attempts per Number</label>
                                                    <input type="number" class="form-control" name="maxAttempts" min="1" max="5" value="3">
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* <!-- Survey Campaign Modal -->
                    <div class="modal fade" id="surveyModal">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Create Survey Campaign</h5>
