                    <!-- Callback Campaign Modal -->
                    <div class="modal fade" id="callbackModal">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Create Callback Campaign</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="callbackForm">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label>Campaign Name</label>
                                                    <input type="text" class="form-control" name="name" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label>Days to Look Back</label>
                                                    <input type="number" class="form-control" name="daysToLookBack"
                                                           min="1" max="7" value="1" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label>Minimum Callback Rate (%)</label>
                                                    <input type="number" class="form-control" name="requiredCallbackRate"
                                                           min="1" max="100" value="80" required>
                                                </div>
                                                <div class="mb-3 form-check">
                                                    <input type="checkbox" class="form-check-input" name="prioritizeOlder" checked>
                                                    <label class="form-check-label">Prioritize Older Callbacks</label>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                <!-- Agent Management Tab -->
                <div class="tab-pane fade" id="agentManagement">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Manage Agents</h5>
                            <div>
                                <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#createAgentModal">
                                    <i class="fas fa-user-plus"></i> Add Agent
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Search Form -->
                            <form method="get" action="@Url.Action("ManagerDashboard")#agentManagement">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" placeholder="Search agents..."
                                               name="searchName" value="@Model.SearchName">
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                    </div>
                                </div>
                            </form>

                            <!-- Agents Table -->
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Agent</th>
                                            <th>Team</th>
                                            <th>Status</th>
                                            <th>VoIP Number</th>
                                            <th>Extension</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var agent in Model.ManagedAgents)
                                        {
                                            <tr>
                                                    <td>@agent.FullName</td>
                                                    <td>@agent.TeamName</td>>
                                                <td>
                                                    <span class="badge @(string.IsNullOrEmpty(agent.Status) ? "bg-secondary" : agent.Status == "Active" ? "bg-success" : "bg-danger")">
                                                        @(string.IsNullOrEmpty(agent.Status) ? "Unknown" : agent.Status)
                                                    </span>
                                                </td>
                                                <td>@(agent.VoIPDetails?.InboundNumber ?? "N/A")</td>
                                                <td>@(agent.VoIPDetails?.Extension ?? "N/A")</td>
                                                <td>
                                                    <span>
                                                        <form method="post" asp-action="ToggleAgentStatus">
                                                            <input type="hidden" name="agentId" value="@agent.Id" />
                                                            <input type="hidden" name="page" value="@Model.CurrentPage" />
                                                            <input type="hidden" name="searchName" value="@Model.SearchName" />

                                                            @if (agent.Status == "Active")
                                                            {
                                                                <button type="submit" name="status" value="Inactive" class="btn btn-warning btn-sm">
                                                                    Disable
                                                                </button>
                                                            }
                                                            else
                                                            {
                                                                <button type="submit" name="status" value="Active" class="btn btn-success btn-sm">
                                                                    Enable
                                                                </button>
                                                            }
                                                        </form>
                                                        <!-- Add the Edit Button Here -->
                                                        <button class="btn btn-sm btn-outline-primary"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#editAgentModal"
                                                                data-agentid="@agent.Id"
                                                                data-fullname="@agent.FullName"
                                                                data-email="@agent.Email"
                                                                data-inboundnumber="@(agent.VoIPDetails?.InboundNumber)"
                                                                data-extension="@(agent.VoIPDetails?.Extension)"
                                                                data-username="@(agent.VoIPDetails?.UserName)"
                                                                data-password="@(agent.VoIPDetails?.Password)"
                                                                data-principal="@(agent.VoIPDetails?.Principal)"
                                                                data-received="@(agent.VoIPDetails?.Received)">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </button>
                                                       
                                                    </span>
                                 
                                                    
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <nav aria-label="Agent pagination">
                                <ul class="pagination justify-content-end">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Action("ManagerDashboard", new { page = 1, searchName = Model.SearchName })#agentManagement">
                                                First
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Action("ManagerDashboard", new { page = Model.CurrentPage - 1, searchName = Model.SearchName })#agentManagement">
                                                Previous
                                            </a>
                                        </li>
                                    }

                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               href="@Url.Action("ManagerDashboard", new { page = i, searchName = Model.SearchName })#agentManagement">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Action("ManagerDashboard", new { page = Model.CurrentPage + 1, searchName = Model.SearchName })#agentManagement">
                                                Next
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Action("ManagerDashboard", new { page = Model.TotalPages, searchName = Model.SearchName })#agentManagement">
                                                Last
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Create Agent Modal -->
    <div class="modal fade" id="createAgentModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Agent</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="@Url.Action("CreateAgent", "Caller")">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="firstName" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="surname" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="email" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" name="Apassword" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phoneNumber" required />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">License Key</label>
                                <select class="form-select" name="licenseKey" required>
                                    @foreach (var license in Model.Licenses)
                                    {
                                        <option value="@license.Key">@license.Key (Agent - @license.UsuableAcounts uses left)</option>
                                    }
                                </select>
                                @if (!Model.Licenses.Any())
                                {
                                    <div class="text-danger mt-2">No available Agent licenses</div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <button type="button" class="btn btn-secondary w-100" data-bs-toggle="modal" data-bs-target="#voipCreateModal">
                                        <i class="fas fa-phone"></i> Configure VoIP Details
                                    </button>
                                </div>
                                <div class="card bg-light p-2">
                                    <small class="text-muted">VoIP Configuration</small>
                                    <div id="voipCreateSummary"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Hidden VoIP Fields -->
                        <input type="hidden" name="inboundNumber" id="createInbound" />
                        <input type="hidden" name="extension" id="createExtension" />
                        <input type="hidden" name="userName" id="createUsername" />
                        <input type="hidden" name="password" id="createPassword" />
                        <input type="hidden" name="principal" id="createPrincipal" />
                        <input type="hidden" name="received" id="createReceived" />

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Create Agent</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
        // VoIP Create Configuration
        function saveCreateVoipConfig() {
            const voipData = {
                inbound: document.getElementById('createVoipInbound').value,
                extension: document.getElementById('createVoipExtension').value,
                username: document.getElementById('createVoipUsername').value,
                password: document.getElementById('createVoipPassword').value,
                principal: document.getElementById('createVoipPrincipal').value,
                received: document.getElementById('createVoipReceived').value
            };

            document.getElementById('createInbound').value = voipData.inbound;
            document.getElementById('createExtension').value = voipData.extension;
            document.getElementById('createUsername').value = voipData.username;
            document.getElementById('createPassword').value = voipData.password;
            document.getElementById('createPrincipal').value = voipData.principal;
            document.getElementById('createReceived').value = voipData.received;

            bootstrap.Modal.getInstance(document.getElementById('voipCreateModal')).hide();
            updateCreateVoipSummary();
        }

        function updateCreateVoipSummary() {
            const summary = document.getElementById('voipCreateSummary');
            summary.innerHTML = `
                <div class="text-truncate"><strong>Inbound:</strong> ${document.getElementById('createInbound').value || 'Not set'}</div>
                <div class="text-truncate"><strong>Extension:</strong> ${document.getElementById('createExtension').value || 'Not set'}</div>
            `;
        }
    </script>

